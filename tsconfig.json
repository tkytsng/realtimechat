{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext", "esnext.asynciterable", "dom"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "types": ["@types/node", "@nuxt/types", "@nuxt/vue-app"],
    "paths": {
      "@/*": ["./*"],
      "~/*": ["./*"]
    },
    "experimentalDecorators": true
  },
  "files": ["shims-vue.d.ts"],
  "files.associations": {
    "tslint.json": "jsonc"
  },
  "include": [
    "components/**/*.ts",
    "components/**/*.vue",
    "layouts/**/*.ts",
    "layouts/**/*.vue",
    "pages/**/*.ts",
    "pages/**/*.vue"
  ],
  "exclude": ["node_modules", "static"]

}
